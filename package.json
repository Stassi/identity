{
  "name": "hydrolab",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "homepage": "https://github.com/Stassi/hydrolab#readme",
  "license": "MIT",
  "author": "Andreas Stassivik <andreas@stassi.net> (https://github.com/Stassi)",
  "sideEffects": false,
  "type": "module",
  "repository": "github:Stassi/hydrolab",
  "scripts": {
    "jest:esm": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test": "npm run jest:esm"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "os": [
    "win32"
  ],
  "cpu": [
    "x64"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "<regex_match_files": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true
  }
}
